<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#234"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="Purchase in"
                android:layout_weight="4"
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"
                android:text="sd card"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/sd"
                android:layout_weight="1"/>
            <CheckBox
                android:layout_width="0dp"
                android:textSize="15dp"
                android:layout_height="match_parent"
                android:text="pen drive"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="3"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/pendrive"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16dp"
                android:text="Course name"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:text="Price in INR"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16dp"
                android:layout_weight="2"
                android:text="Price in \n USD"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            >
            <TextView
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textColor="#000"

                android:id="@+id/textview5"
                android:layout_height="match_parent"
                android:background="#ff5cbdb6"
                android:gravity="center"
                android:layout_weight="1.2"
                android:text="C SHARP FOR \n PROFFESTIONALS"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:background="#ff5cbdb6"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="1520"

                    android:textColor="#F00"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="1000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#ff5cbdb6"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="1520"
                    android:textColor="#F00"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:text="1000"

                    />
            </LinearLayout>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00f"
                android:textColor="#F00"
                android:text="ENROLL"
                />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6">

        <ListView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/listview"></ListView>
    </LinearLayout>

</LinearLayout>

